{% extends 'base.html.twig' %}

{% block title 'Toutes les salles' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/styleSalles.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            {% for salle in salles %}
                <div class="col-lg-4">
                    <article class="card-salle">
                        <h2 class="titre-salle">{{ salle.NomSalle}}</h2>
                        <p class="ville-salle text-center">A {{ salle.ville}}</p>
                        <a href="{{ path('show_salles', {slug: salle.slug, id: salle.id} ) }}" class="white"><button class="enSavoirPLus">Voir la salle en d√©tails</button></a>
                    </article>
                </div>
            {% else %}
                <div class="my-5">
                    Pas de salles pour la recherche.
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
