{% extends 'base.html.twig' %}

{% block title 'Toutes les salles' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/styleSalles.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <div class="container">
        {% for salle in salles %}
        
            <div class="card-salle">
                        <h3 class="titre-salle">{{ salle.NomSalle}}</h3>
                        <p class="ville-salle">"{{ salle.ville}}"</p>
                        <a href="{{ path('show_salles', {slug: salle.slug, id: salle.id} ) }}" class="white"><button class="enSavoirPLus">Voir la salle en d√©tails</button></a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
